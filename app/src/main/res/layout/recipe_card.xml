<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recipe_card_height">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_name_tv"
            android:textStyle="bold"
            android:textSize="@dimen/recipe_name_text_size"
            tools:text="@string/recipe_name"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_number_of_steps"
            android:textStyle="bold"
            android:textSize="@dimen/recipe_name_text_size"
            tools:text="@string/recipe_number_steps"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/recipe_name_tv"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>